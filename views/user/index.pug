extends ../layout/common.pug
block content
    h1  User List
        a(href="/user/create", class="btn btn-primary ml-3") New

    form(action="/user/search" method="GET" class="d-flex")
        input(type="text", name="q", id="input-name",value=q, class="form-control mr-2")
        button(id="submit-btn", class="btn btn-primary") Search
    table.table
        th Name
        th Phone
        th Action

        each val in users
         tr
            td=val.name
            td=val.phone
            td 
                a(href="/user/"+ val.id, class="btn btn-primary") View